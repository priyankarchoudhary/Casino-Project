@model Casino.AdminPortal.Web.Models.UserModel

@{
    ViewBag.Title = "Create User";
}
<br />
<div class="col-md-6 col-md-offset-3">
@using (Html.BeginForm("CreateUser", "User", FormMethod.Post,  new { enctype = "multipart/form-data" }))
{
    <div class="panel panel-default">
        <div class="panel panel-heading"><h1>Create User</h1></div>
        <div class="panel-body">
            @Html.ValidationSummary()
            <div class="form-group ">
                <div class="input-group">
                    <span class="input-group-addon">Name</span>
                    @Html.TextBoxFor(model => model.CustomerName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group ">
                <div class="input-group">
                    <span class="input-group-addon">Date of Birth</span>
                    @Html.TextBoxFor(model => model.DOB, new { @type = "Date", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">Contact Number</span>
                        @Html.TextBoxFor(model => model.Contact, new { @class = "form-control" })
                        </div>
                    </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">Email Id</span>
                        @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control" })
                        </div>
                    </div>
            <div class="form-group">
                <div class="input-group">
                     <span class="input-group-addon">Identity Proof</span>
                
                    <span class="pull-right">
                    <input type="file" name="ImageData" id="ImageData" onchange="fileCheck(this);" />
                     </span>
               
                </div>
   
            </div>
                <button type="submit" class="btn btn-success ">Submit</button>
            </div>
        </div>
}
</div>